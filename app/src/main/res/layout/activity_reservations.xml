<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reservationsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#081B3A"
    tools:context=".ReservationsActivity">

    <!-- Header Title -->
<TextView
android:id="@+id/tvReservationsTitle"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="My Reservations"
android:textSize="24sp"
android:textStyle="bold"
android:textColor="#FFC107"
    android:layout_marginTop="24dp"
    android:layout_marginStart="24dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

    <!-- Back to Menu Button -->
<com.google.android.material.button.MaterialButton
android:id="@+id/btnBackMenu"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Menu"
android:textColor="#081B3A"
android:backgroundTint="#FFC107"
android:layout_marginTop="24dp"
android:layout_marginEnd="24dp"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintEnd_toEndOf="parent"/>

    <!-- RecyclerView for reservation list -->
<androidx.recyclerview.widget.RecyclerView
android:id="@+id/rvReservations"
android:layout_width="0dp"
android:layout_height="0dp"
android:layout_marginTop="16dp"
android:layout_marginStart="16dp"
android:layout_marginEnd="16dp"
android:clipToPadding="false"
app:layout_constraintTop_toBottomOf="@id/tvReservationsTitle"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
