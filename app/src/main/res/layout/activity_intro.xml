<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueb"
    tools:context=".Intro">

    <TextView
        android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_marginBottom="99dp"
        android:text="Sky Gabes"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        tools:layout_editor_absoluteX="101dp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="402dp"
        android:layout_height="1036dp"
        android:src="@drawable/pad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.909" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Padel Gabes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:id="@+id/startbtn"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/blue_bg"
            android:text="Reserver"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:id="@+id/reservationsBtn"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/white_bg"
            android:text="My Reservations"
            android:textColor="@color/blue"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:id="@+id/scanBtn"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_bg"
            android:text="Scan QR Code"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>