<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true"
    tools:context=".AddCreditActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addCreditLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/white"/>

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Credit"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/accent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Current Balance -->
        <TextView
            android:id="@+id/tvCurrentBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Balance: -- DT"
            android:textSize="16sp"
            android:textColor="@color/text_on_dark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Credit Card Section -->
        <TextView
            android:id="@+id/tvCardSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Card Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvCurrentBalance"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Card Number -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCardNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Card Number"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/accent"
            app:hintTextColor="@color/accent"
            app:layout_constraintTop_toBottomOf="@id/tvCardSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="19"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Expiry Date and CVV Row -->
        <LinearLayout
            android:id="@+id/llExpiryRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tilCardNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Expiry Date -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilExpiry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:hint="MM/YY"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/accent"
                app:hintTextColor="@color/accent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etExpiry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- CVV -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCvv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:hint="CVV"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/accent"
                app:hintTextColor="@color/accent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Cardholder Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCardholderName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Cardholder Name"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/accent"
            app:hintTextColor="@color/accent"
            app:layout_constraintTop_toBottomOf="@id/llExpiryRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCardholderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Credit Amount Section -->
        <TextView
            android:id="@+id/tvCreditSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Credit Amount"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tilCardholderName"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Credit Options -->
        <RadioGroup
            android:id="@+id/rgCreditOptions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvCreditSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/rb50Credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50 Credits - 25.00 DT"
                android:textColor="@color/white"
                android:buttonTint="@color/accent"
                android:padding="12dp"/>

            <RadioButton
                android:id="@+id/rb100Credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100 Credits - 45.00 DT"
                android:textColor="@color/white"
                android:buttonTint="@color/accent"
                android:padding="12dp"/>

            <RadioButton
                android:id="@+id/rb200Credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200 Credits - 80.00 DT"
                android:textColor="@color/white"
                android:buttonTint="@color/accent"
                android:padding="12dp"/>

            <RadioButton
                android:id="@+id/rb500Credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="500 Credits - 175.00 DT"
                android:textColor="@color/white"
                android:buttonTint="@color/accent"
                android:padding="12dp"/>
        </RadioGroup>

        <!-- Summary Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSummary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#1E3A5F"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/rgCreditOptions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Summary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Credits to add:"
                        android:textColor="@color/text_on_dark"/>

                    <TextView
                        android:id="@+id/tvCreditsToAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Price:"
                        android:textColor="@color/text_on_dark"/>

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00 DT"
                        android:textColor="@color/accent"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Pay Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPay"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="Pay Now"
            android:textSize="18sp"
            android:textColor="#081B3A"
            android:backgroundTint="@color/accent"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardSummary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Loading Overlay -->
        <FrameLayout
            android:id="@+id/loadingOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#CC000000"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:background="@drawable/rounded_white">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:indeterminateTint="@color/accent"/>

                <TextView
                    android:id="@+id/tvLoadingMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Processing payment..."
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Success Overlay -->
        <FrameLayout
            android:id="@+id/successOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#CC000000"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:background="@drawable/rounded_white">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="#4CAF50"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Payment Successful!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"/>

                <TextView
                    android:id="@+id/tvSuccessMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Credits added to your account"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Done"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"/>
            </LinearLayout>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
